    <main>
        <br>
        <section id="caixa" class="container">
            <section class="row">
                <section class="col">
                    <h1 class="mt-5 text-center">Cadastro</h1>
                    <form action="/cadastroBiblioteca" method="POST">
                
                        <section class="form-group">
                            <laberl for="categoria">Categoria</label>
                            <input type="text" class="form-control" id="categoria" name="categoria"
                                placeholder="Categoria do livro" required value="">
                        </section>
                        <section class="form-group">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="nome" required
                                value="">
                        </section>
                        <section class="form-group">
                            <label for="autor">Autor</label>
                            <input type="text" class="form-control" id="autor" name="autor" placeholder="Autor" required
                                value="">
                        </section>
                        <section class="form-group">
                            <label for="ano">Ano do livro</label>
                            <input type="number" class="form-control" id="ano" name="ano" placeholder="Ano do livro"
                                required value="">
                        </section>

                        <section class="form-group">
                            <label for="editora">Editora</label>
                            <input type="text" class="form-control" id="editora" name="editora" placeholder="Editora"
                                required value="">
                        </section>
                        
                        <button id="enviar" class="btn btn-primary" type="submit" >Enviar</button>
                    </form>
                    <br>
                </section>
            </section>
        </section>
