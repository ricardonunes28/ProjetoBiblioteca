          <input class="form-control mr-sm-2" type="search" placeholder="Encontre seu livro" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisa</button>
        </form>
      </nav>
</header>
<Main>
    <br>
    <section id="caixa" class="container">
        <section class="row">
            <section class="col">
                <h1 class="mt-5">Cadastro</h1>
                <form action="/editarBiblioteca" method="POST">
                    <section class="form-group">
                        <laberl for="categoria">Categoria</laberl>
                        <input type="text" class="form-control" id="categoria" name="categoria" placeholder="Categoria do livro" required value="<%=conteudo_item.categoria %>"> 
                    </section>
                    <section class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="nome"  value="<%=conteudo_item.nome %>">
                    </section>
                    <section class="form-group">
                        <label for="autor">Autor</label>
                        <input type="text" class="form-control" id="autor" name="autor" placeholder="Autor" value="<%=conteudo_item.autor %>">
                    </section>
                    <section class="form-group">
                        <label for="ano">Ano do livro</label>
                        <input type="number" class="form-control" id="ano" name="ano" placeholder="Ano do livro" value="<%=conteudo_item.ano %>">
                    </section>

                    <section class="form-group">
                        <label for="editora">Editora</label>
                        <input type="text" class="form-control" id="editora" name="editora" placeholder="Editora" value="<%=conteudo_item.editora %>">
                    </section>
                    <input type="hidden" name="id" value="<%= conteudo_item._id %>">
                    <button id="enviar" class="btn btn-primary" type="submit" >Enviar</button>
                </form>
            </section>
        </section>
    </section>
    <br></br>
</Main>
